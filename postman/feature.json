			"name": "Добавление инициатора события",
			"event": [
				{
					"listen": "test",
					"script": {
						"exec": [
							"pm.test(\"Ответ должен содержать код статуса 201 и данные в формате json\", function() {\r",
							"    pm.response.to.have.status(201); \r",
							"    pm.response.to.be.withBody; \r",
							"    pm.response.to.be.json; \r",
							"});\r",
							"const body = pm.response.json(); \r",
							"pm.test(\"Ответ должен содержать поля 'id', 'email', 'name', 'author'\", function() {\r",
							"    pm.expect(body).to.have.property('id');\r",
							"    pm.expect(body).to.have.property('name');\r",
							"    pm.expect(body).to.have.property('email');\r",
							"});\r",
							"pm.environment.set(\"initiatorId\", pm.response.json().id);"
